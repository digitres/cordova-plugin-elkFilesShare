<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android"
        id="cordova-plugin-filepicker" version="1.0.0">

    <name>FilePicker</name>
    <description>Allows user to pick a file from a device folder of SD card</description>
    <keywords>cordova,plugin,file, picker, android</keywords>
    <license>MIT</license>
    <js-module name="File Picker Plugin" src="www/filePicker.js">
        <clobbers target="cordova.plugins.filePicker" />
    </js-module>
    <engines>
        <engine name="cordova" version=">=10.0.0"/>
        <engine name="cordova-android" version=">=9.0.0"/>
    </engines>

    <platform name="android">
        <source-file src="src/android/com/digitres/cordova/plugin/filePicker.kt" target-dir="java/com/digitres/cordova/plugin/"/>
        <config-file target="config.xml" parent="/*">
            <preference name="GradlePluginKotlinEnabled" value="true" />
            <feature name="FilePicker">
                <param name="android-package" value="com.digitres.cordova.plugin.FilePicker"/>
                <param name="onload" value="true" />
            </feature>
        </config-file>
        <config-file target="AndroidManifest.xml" parent="/manifest">
<!--            <uses-permission android:name="android.permission.REORDER_TASKS"/>-->
            <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
            <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
        </config-file>

    </platform>
</plugin>